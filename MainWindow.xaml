<ui:FluentWindow
    x:Class="Watson.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Watson"
    Width="900"
    Height="550"
    MinWidth="345"
    ExtendsContentIntoTitleBar="True"
    ResizeMode="CanResize"
    WindowBackdropType="Acrylic"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Title="Watson"/>

        <StackPanel Grid.Row="1" >
            <ui:CardExpander Margin="20" IsExpanded="True" Icon="{ui:SymbolIcon Info20}">
                <ui:CardExpander.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ui:TextBlock
                            Grid.Column="0"
                            FontSize="16"
                            FontTypography="BodyStrong"
                            Text="Windows Specs" />

                        <ui:Button
                    Content="Copy"
                            Grid.Column="1"
                            Margin="0,0,16,0"/>
                    </Grid>
                </ui:CardExpander.Header>
                <StackPanel  Orientation="Vertical">

                    <WrapPanel>
                        <TextBlock Text="Product Name"
               FontWeight="SemiBold"
               MinWidth="160"
               Margin="0,0,10,7"/>
                        <TextBlock x:Name="productName"
               TextWrapping="Wrap"
               MaxWidth="600"
                                   Margin="0,0,10,7"/>
                    </WrapPanel>

                    <WrapPanel>
                        <TextBlock Text="Product ID"
               FontWeight="SemiBold"
               MinWidth="160"
               Margin="0,0,10,7"/>
                        <TextBlock x:Name="productID"
               TextWrapping="Wrap" Margin="0,0,10,7"/>
                    </WrapPanel>

                    <WrapPanel>
                        <TextBlock Text="Build"
               FontWeight="SemiBold"
               MinWidth="160"
               Margin="0,0,10,7"/>
                        <TextBlock x:Name="buildVersion" Margin="0,0,10,7"/>
                    </WrapPanel>

                    <WrapPanel>
                        <TextBlock Text="Installed Key"
               FontWeight="SemiBold"
               MinWidth="160"
               Margin="0,0,10,7"/>
                        <TextBlock x:Name="softKey" Margin="0,0,10,7"
               TextWrapping="Wrap"/>
                    </WrapPanel>



                    <WrapPanel>
                        <TextBlock Text="OEM Edition"
               FontWeight="SemiBold"
               MinWidth="160"
               Margin="0,0,10,7"/>
                        <TextBlock x:Name="oemEdition"
               TextWrapping="Wrap" Margin="0,0,10,7"/>
                    </WrapPanel>

                </StackPanel>
            </ui:CardExpander>

            <ui:Card Grid.Row="1">
                <WrapPanel>
                    <TextBlock Text="OEM Key"
FontWeight="SemiBold"
MinWidth="160"
Margin="0,0,10,0"/>
                    <TextBlock x:Name="oemKey"
TextWrapping="Wrap" MouseLeftButtonDown="oemKey_MouseLeftButtonDown"/>

                    <Button>Copy</Button>
                    <Button>Show</Button>
                </WrapPanel>
            </ui:Card>
        </StackPanel>

        
    </Grid>
</ui:FluentWindow>
