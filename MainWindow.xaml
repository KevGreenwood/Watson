<ui:FluentWindow
    x:Class="Watson.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Watson"
    Width="900"
    Height="550"
    MinWidth="10"
    ExtendsContentIntoTitleBar="True"
    ResizeMode="CanResize"
    WindowBackdropType="Acrylic"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Title="Watson"/>

        <StackPanel Grid.Row="1" Margin="20" Orientation="Vertical">
            <WrapPanel>
                <TextBlock Text="Product Name"
                           FontWeight="SemiBold"
                           MinWidth="160"
                           Margin="0,0,10,0"/>
                <TextBlock x:Name="productName"
                           TextWrapping="Wrap"
                           MaxWidth="600"/>
            </WrapPanel>

            <WrapPanel>
                <TextBlock Text="Product ID"
                           FontWeight="SemiBold"
                           MinWidth="160"
                           Margin="0,0,10,0"/>
                <TextBlock x:Name="productID"
                           TextWrapping="Wrap"/>
            </WrapPanel>

            <WrapPanel>
                <TextBlock Text="Build"
                           FontWeight="SemiBold"
                           MinWidth="160"
                           Margin="0,0,10,0"/>
                <TextBlock x:Name="buildVersion"/>
            </WrapPanel>

            <WrapPanel>
                <TextBlock Text="Installed Key"
                           FontWeight="SemiBold"
                           MinWidth="160"
                           Margin="0,0,10,0"/>
                <TextBlock x:Name="softKey"
                           TextWrapping="Wrap"/>
            </WrapPanel>

            <WrapPanel>
                <TextBlock Text="OEM Key"
                           FontWeight="SemiBold"
                           MinWidth="160"
                           Margin="0,0,10,0"/>
                <TextBlock x:Name="oemKey"
                           TextWrapping="Wrap" MouseLeftButtonDown="oemKey_MouseLeftButtonDown"/>
            </WrapPanel>

            <WrapPanel>
                <TextBlock Text="OEM Edition"
                           FontWeight="SemiBold"
                           MinWidth="160"
                           Margin="0,0,10,0"/>
                <TextBlock x:Name="oemEdition"
                           TextWrapping="Wrap"/>
            </WrapPanel>

        </StackPanel>
    </Grid>
</ui:FluentWindow>
